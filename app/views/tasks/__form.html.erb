<%= form_with model: task, class:"p-0" do |f| %>
<div class="d-flex flex-column row m-0">
  <p class="p-0 my-2">
    <%= f.label :title, class:"p-0"%>
  </p>
  <%= f.text_field :title , class:"col-3"%>
</div>
<div class="d-flex flex-column row m-0">
  <p class="p-0 my-2">
    <%= f.label :details, class:"p-0"%>
  </p>
  <%= f.text_area :details, size: "60x10", class:"col-3"%>
</div>
<div class="my-3 p-0 d-flex">
  <p class="p-0 my-2">
    <%= f.label :completed %>
  </p>
  <%= f.check_box :completed , class:"mx-2"%>
</div>
  <%= f.submit "Save Task", class:"btn btn-outline-success" %>
<% end %>
